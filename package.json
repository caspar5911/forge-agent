{
  "name": "forge",
  "displayName": "Forge",
  "description": "Minimal Forge extension shell",
  "version": "0.0.1",
  "publisher": "forge",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "forge.run",
        "title": "Forge: Run"
      },
      {
        "command": "forge.context",
        "title": "Forge: Context"
      }
    ],
    "configuration": {
      "title": "Forge",
      "properties": {
        "forge.llmEndpoint": {
          "type": "string",
          "default": "http://127.0.0.1:8000/v1",
          "description": "Base URL for the local LLM server (OpenAI-compatible)."
        },
        "forge.llmModel": {
          "type": "string",
          "default": "Qwen/Qwen2.5-Coder-32B-Instruct-AWQ",
          "description": "Model name to send in chat completion requests."
        },
        "forge.llmApiKey": {
          "type": "string",
          "default": "",
          "description": "Optional API key for the local LLM server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3"
  }
}
