{
  "name": "forge",
  "displayName": "Forge",
  "description": "Minimal Forge extension shell",
  "version": "0.0.1",
  "publisher": "forge",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:forge.run"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "forge.run",
        "title": "Forge: Run"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3"
  }
}
